}
/* 第二行价格 */
.momey_3 {
  margin-left: 10rpx;
  color: #888888;
  font-size: 28rpx;
}
/* 市场价 */
.momey_4 {
  margin-left: 5rpx;
  color: #888888;
  font-size: 28rpx;
  /* 删除线 */
  text-decoration:line-through;
}
/* 商品介绍标题排版 */
.caption-flex {
  display: flex;
  align-items:center;
}
/* 商品介绍 */
.caption {
  margin-left: 10rpx;
  width: 85%;
  font-size: 33rpx;
  color: #030303;
  /* 只显示两行文字 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
/* 分享按钮 */
.share {
  width: 15%;
  height: 50rpx; 
}
.share image {
  margin-left: 45rpx; 
  width: 50rpx;
  height: 50rpx;
  /* background-color: #eeeeee; */
}
.small-info {
  display: flex;
  align-items:center;
  justify-content: space-between;
  margin-top: 3rpx; 
  margin-bottom: 10rpx;
}
.small-info text {
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 100px;
  color: #888888;
  font-size: 25rpx;
}
.hr-none {
  height: 10px;
  background-color: #F6F6F6;
}
.hr-small{
  height: 1px;
  background-color: #e0e0e0;
  margin-left: 10px;
}
.hr-h {
  margin-top: 10rpx;
}
.marketing {
  height: 85rpx;
  display: flex;
  color: #888888;
  font-size: 27rpx;
  align-items: center;
}
.marketing-simple {
  width: 15%;
  /* 内部再次对齐 */
  display: flex;
  justify-content:center;
  align-items: center;
}
.marketing-title {
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #030303;
}

.skuModal {
  z-index: 10;
  height: 800rpx;
  /* 固定底部 */
  position:fixed;
  bottom:0;
  /* flex内部对齐 */
  /* display: flex; */
  /* 水平两端对齐 */
  /* justify-content: space-between;  */
  /* 垂直对齐 */
  /* align-items: center;  */
  border-radius: 25px;
  background-color: #F6F6F6F0;
}
.skuModal-header {
  height:200rpx;
  /* background-color:#eeeeee; */
  /* flex内部对齐 */
  display: flex; 
  /* 垂直对齐 */
  align-items: center; 
  /* 水平两端对齐 */
