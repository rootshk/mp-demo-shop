}
.skuModal-header-image {
  width:150rpx; 
  height:150rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 10px;
}
.skuModal-header-message {
  /* flex内部对齐 */
  display: flex;
  flex-direction: column;
  
  /* 水平两端对齐 */
  justify-content: flex-start; 
}
.skuModal-header-message-offImage {
  width: 50rpx;
  height: 50rpx;
}
.skuModal-header-message-money {
  color: red;
  font-size: 30rpx;
}
.skuModal-header-message-price {
  color: red;
  font-size: 60rpx;
}
.skuModal-header-message-category {
  color: #888888;
  font-size: 35rpx;
  margin-left: 10rpx;
}
.skuModal-header-message-tips {
  color: #333333;
  font-size: 27rpx;
}
.skuModal-header-left {
  /* flex内部对齐 */
   display: flex;
}
.skuModal-header-right {
  width: 75rpx;
  align-self: flex-start;
  margin-top: 25rpx;
}
.bottom-view {
  height: 100rpx;
  background-color: #ffffff;
  /* 固定底部 */
